[user]
	name = Saurav Maheshkar
	email = sauravvmaheshkar@gmail.com
	signingkey = /Users/saurav/.ssh/id_ed25519.pub
[core]
    	excludesfile = ~/.gitignore
[push]
	default = upstream
	autoSetupRemote = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[color]
	ui = true
[commit]
	verbose = true
	gpgsign = true
[rebase]
	autoStash = true
[checkout]
	defaultRemote = origin
[branch]
	sort = -committerdate
[github]
	user = SauravMaheshkar
[alias]
	s = status
	del = branch -D
	cob = checkout -b
	last = log -1 HEAD
	logs = log --show-signature
	branches = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate

[gpg]
	format = ssh
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
